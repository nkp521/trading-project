<!DOCTYPE html>
<html>
  <head>
    <title>Stonk Strategies</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/candlestick_bg' %>
    
    <% if user_signed_in? %>
      <nav>
        <%= link_to "Stonk Strategies", root_path %>
        <div class="nav-center">
          <%= link_to "View Strategies", strategies_path %>
          <%= link_to "View Users", users_path %>
          <%= link_to "Create Strategies", new_user_strategy_path(current_user) %>
        </div>
        <div class="nav-right">
          <span><%= current_user.username %></span>
          <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
        </div>
      </nav>
    <% else %>
      <nav>
        <%= link_to "Stonk Strategies", root_path %>
        <div class="nav-center">
          <%= link_to "View Strategies", strategies_path %>
          <%= link_to "View Users", users_path %>
        </div>
        <div class="nav-right">
          <%= link_to "Login", root_path(form: 'login') %>
          <%= link_to "Sign Up", root_path(form: 'signup') %>
        </div>
      </nav>
    <% end %>

    <main id="main-content">
      <%= yield %>
    </main>

    <footer>
      <p>&copy; 2025 NKP Industries. All rights reserved.</p>
    </footer>
  </body>
</html>
