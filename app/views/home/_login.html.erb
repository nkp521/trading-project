<h2>Login</h2>
<% login_user = User.new %>
<%= render "shared/errors", object: login_user %>
<%= form_with model: login_user, url: user_session_path, local: true do |f| %>
  <div>
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, placeholder: "Email", autofocus: true %>
  </div>

  <div>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, "Remember me" %>
  </div>
  
  <%= f.submit "Login" %>
<% end %>
