<div class="strategy-form">
  <h1>Create New Strategy</h1>

  <%= form_with model: [@user, @strategy], url: user_strategies_path(@user), local: true do |form| %>
    <%= render "shared/errors", object: @strategy %>

    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :long_entry %>
      <%= form.text_field :long_entry %>
    </div>

    <div>
      <%= form.label :short_entry %>
      <%= form.text_field :short_entry %>
    </div>

    <div>
      <%= form.label :risk_level %>
      <%= form.select :risk_level, ["Low", "Medium", "High"], prompt: "Select risk level" %>
    </div>

    <div>
      <%= form.submit "Create Strategy" %>
    </div>
  <% end %>

  <%= link_to "Back to Strategies", strategies_path, class: "btn" %>
</div>
